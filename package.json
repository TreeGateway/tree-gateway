{
  "name": "tree-gateway",
  "version": "1.1.2",
  "homepage": "http://treegateway.org",
  "description": "The Tree Gateway API Gateway",
  "author": "Thiago da Rosa de Bustamante <trbustamante@gmail.com>",
  "keywords": [
    "API",
    "Gateway",
    "REST",
    "RESTFul",
    "service",
    "microservice",
    "typescript",
    "node server"
  ],
  "main": "./dist/tree-gateway.js",
  "typings": "./dist/tree-gateway.d.ts",
  "license": "MIT",
  "scripts": {
    "start": "node dist/app.js",
    "start:cluster": "node dist/app-cluster.js",
    "build": "npm run clean && tsc && npm run swagger && copyfiles -u 1 src/*.yaml dist",
    "clean": "rimraf dist",
    "lint": "tslint ./src/**/*.ts ./test/**/*.ts",
    "format": "tsfmt -r",
    "postversion": "git push origin master",
    "pretest": "cross-env NODE_ENV=test npm run build && npm run lint",
    "swagger": "swaggerGen -c ./swagger.config.json",
    "test": "cross-env NODE_ENV=test mocha",
    "test:coverage": "nyc npm test",
    "tsc": "tsc",
    "doc": "typedoc --out ./doc/ --name 'Tree Gateway' --readme ./README.MD --module commonjs --target ES5 --includeDeclarations --excludePrivate --excludeExternals ./src"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/admin/config/cli*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "agentkeepalive": "^3.3.0",
    "argparse": "^1.0.9",
    "bcrypt": "^1.0.2",
    "cluster": "^0.7.7",
    "compression": "^1.7.0",
    "consul": "^0.29.0",
    "cors": "^2.8.4",
    "decache": "^4.1.0",
    "eventemitter3": "1.x.x",
    "events": "^1.1.1",
    "express": "^4.15.4",
    "express-rate-limit": "^2.9.0",
    "express-winston": "^2.2.0",
    "fs-extra-promise": "^0.4.1",
    "human-interval": "^0.1.6",
    "ioredis": "^2.5.0",
    "ip-filter": "^2.0.0",
    "joi": "^9.2.0",
    "jsonata": "^1.3.0",
    "lodash": "^4.17.4",
    "memory-streams": "^0.1.2",
    "on-headers": "^1.0.1",
    "os": "^0.1.1",
    "passport": "^0.3.2",
    "passport-http": "^0.3.0",
    "passport-jwt": "^2.2.0",
    "passport-local": "^1.0.0",
    "path-to-regexp": "^1.6.0",
    "raw-body": "^2.3.0",
    "request": "^2.72.0",
    "requires-port": "1.x.x",
    "serve-favicon": "~2.3.0",
    "swagger-client": "^3.0.20",
    "typescript-ioc": "^0.4.2",
    "typescript-rest": "^1.1.1",
    "typescript-rest-swagger": "0.0.8",
    "url": "^0.11.0",
    "uuid": "^3.1.0",
    "weighted": "^0.3.0",
    "winston": "^2.3.1",
    "yamljs": "^0.2.10"
  },
  "devDependencies": {
    "@types/argparse": "^1.0.30",
    "@types/bcrypt": "^1.0.0",
    "@types/chai": "^3.5.1",
    "@types/compression": "0.0.33",
    "@types/consul": "^0.23.32",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.0.36",
    "@types/express-serve-static-core": "^4.0.49",
    "@types/fs-extra-promise": "0.0.30",
    "@types/ioredis": "0.0.21",
    "@types/joi": "^9.0.32",
    "@types/jsonwebtoken": "^7.2.0",
    "@types/lodash": "^4.14.73",
    "@types/mocha": "^2.2.41",
    "@types/multer": "0.0.32",
    "@types/on-headers": "^2.1.29",
    "@types/passport": "^0.2.33",
    "@types/passport-http": "^0.3.1",
    "@types/passport-jwt": "^2.0.22",
    "@types/passport-local": "^1.0.29",
    "@types/raw-body": "^2.3.0",
    "@types/request": "0.0.31",
    "@types/serve-static": "^1.7.31",
    "@types/uuid": "^2.0.29",
    "@types/weighted": "0.0.5",
    "@types/winston": "0.0.28",
    "@types/yamljs": "^0.2.30",
    "chai": "^3.5.0",
    "copyfiles": "^1.2.0",
    "coveralls": "^2.13.1",
    "cross-env": "^4.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.0",
    "nyc": "^10.2.0",
    "rimraf": "^2.6.1",
    "source-map-support": "^0.4.14",
    "ts-node": "^3.3.0",
    "tslint": "^5.6.0",
    "typedoc": "^0.5.10",
    "typescript": "2.4.1",
    "typescript-formatter": "^5.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Leanty/tree-gateway"
  },
  "bin": {
    "treeGateway": "dist/app-cluster.js",
    "treeGatewayConfig": "dist/admin/config/cli.js"
  },
  "bugs": {
    "url": "https://github.com/Leanty/tree-gateway/issues"
  },
  "directories": {
    "lib": "dist",
    "doc": "doc"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "engineStrict": true
}
